<div class="chat-box">
  <h1><%= @user.name %>さんとのチャット</h1>
  <%= form_with model: @chat do |f| %>
    <%= f.text_field :message %>
    <%= f.hidden_field :room_id %>
    <%= f.submit %>
  <% end %>

  <table class="message">
    <thead>
      <tr>
        <th style="text_align: left; font-size: 20px;", width="200px">
          <%= current_user.name %>
        </th>
        <th style="text_align: right; font-size: 20px;", width="200px">
          <%= @user.name %>
        </th>
      </tr>
    </thead>
    <% @chats.each do |chat| %>
      <% if chat.user_id == current_user.id %>
      <tbody>
        <tr>
          <th>
            <p style="text_align: left;">
              <%= chat.message %>
            </p>
          </th>
        </tr>
      </tbody>
      <% else %>
      <tbody>
        <tr>
          <th></th>
          <th>
            <p style="text_align: right;">
              <%= chat.message %>
            </p>
          </th>
        </tr>
      </tbody>
      <% end %>
    <% end %>
  </table>
</div>